<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppCompatLightTheme" parent="Base.Theme.AppCompat.Light"/>

    <style name="im_message_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/im_message_time_text_color</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">@dimen/text_xsmall</item>
        <!--  Roboto Regular -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="im_message_read">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/im_message_read_text_color</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">@dimen/text_xsmall</item>
        <!--  Roboto Regular -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
