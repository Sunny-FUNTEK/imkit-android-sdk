<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/im_room_list_empty"
        android:textColor="@color/im_create_room_description_text"
        android:textSize="@dimen/text_large"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txtCreateRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/im_create_room_bg"
        android:drawableLeft="@drawable/ic_add_small"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_add_small"
        android:gravity="center_vertical"
        android:text="@string/im_create_room"
        android:textColor="@color/im_create_room_text"
        android:textSize="@dimen/text_large"/>

</LinearLayout>