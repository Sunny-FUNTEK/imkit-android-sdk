<?xml version="1.0" encoding="utf-8"?>
<!-- Left text message content-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="0dp"
    android:orientation="vertical"
    android:background="@drawable/im_bubble_left">
    <TextView
        android:id="@+id/im_message_text"
        style="@style/im_message_text_style"
        android:layout_width="200dp"
        android:padding="12dp"
        android:textColor="@color/im_message_text_color"
        android:text="blah blah"/>
    
    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/im_message_action_agree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/holo_orange_dark"
            android:text="Accept"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/im_message_action_disagree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/holo_orange_dark"
            android:text="Reject"/>
    </LinearLayout>
</LinearLayout>
